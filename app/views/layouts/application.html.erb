<!DOCTYPE html>
<html>
<head>
	<title>Myshop</title>
	<%= csrf_meta_tags %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track'=> true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track'=> true %>
</head>

<body class="skin-blue sidebar-mini">
	<div class="wrapper">

		<%= render "header" %>

		<aside class="main-sidebar">
			<section class="sidebar" style="height: auto;">
				<ul class="sidebar-menu">
				<li><%= link_to_icon "fa fa-dashboard", "爱之路管理", "" %></li>
					<li><%= link_to_icon "fa fa-dashboard", "手机端爱之路管理","" %></li>
					<% if nil %>
					<li><%= link_to_icon "fa fa-dashboard", "爱交友管理", "" %></li>
					<% end %>
					<li><%= link_to_icon "fa fa-dashboard", "加盟商管理", "" %></li>
					<li><%= link_to_icon "fa fa-dashboard", "系统管理", "" %></li>
				</ul>
			</section>
		</aside>

		<div class="content-wrapper" style="min-height: 1126px;">
			<%= yield %>
		</div>

		

	</div>



	<%= yield :script %>
</body>
</html>
